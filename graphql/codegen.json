{
  "schema": "./schema/**/*.gql",
  "overwrite": true,
  "generates": {
    "./src/graphTypes.ts": {
      "plugins": ["typescript", "typescript-resolvers"],
      "config": {
        "allowParentTypeOverride": true,
        "contextType": "./types#Context",
        "mappers": {
          "Entry": "./dataSources/accountingDb/types#EntryDbRecord",
          "EntryRefund": "./dataSources/accountingDb/types#EntryRefundDbRecord",
          "NewEntryRefund": "./dataSources/accountingDb/types#EntryRefundDbRecord"
        },
        "noSchemaStitching": true,
        "optionalResolveType": true,
        "scalars": {
          "Date": "Date",
          "Rational": "fraction.js#default as Fraction"
        },
        "useImplementingTypes": true
      }
    },
    "./public/fragmentTypes.json": {
      "plugins": ["fragment-matcher"]
    }
  }
}
