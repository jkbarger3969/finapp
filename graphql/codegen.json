{
  "schema": "./schema/**/*.gql",
  "overwrite": true,
  "generates": {
    "./src/graphTypes.ts": {
      "plugins": ["typescript", "typescript-resolvers"],
      "config": {
        "allowParentTypeOverride": true,
        "contextType": "./types#Context",
        "mappers": {
          "AccountCard": "./dataSources/accountingDb/types#PaymentCardDbRecord",
          "AccountChecking": "./dataSources/accountingDb/types#AccountDbRecord",
          "AccountInterface": "./dataSources/accountingDb/types#AccountDbRecord",
          "AccountWithCardsInterface": "./dataSources/accountingDb/types#AccountDbRecord",
          "Budget": "./dataSources/accountingDb/types#BudgetDbRecord",
          "Business": "./dataSources/accountingDb/types#BusinessDbRecord",
          "Category": "./dataSources/accountingDb/types#CategoryDbRecord",
          "Department": "./dataSources/accountingDb/types#DepartmentDbRecord",
          "Entry": "./dataSources/accountingDb/types#EntryDbRecord",
          "EntryRefund": "./dataSources/accountingDb/types#EntryRefundDbRecord",
          "EntryItem": "./dataSources/accountingDb/types#EntryItemDbRecord",
          "FiscalYear": "./dataSources/accountingDb/types#FiscalYearDbRecord",
          "NewEntryRefund": "./dataSources/accountingDb/types#EntryRefundDbRecord",
          "Alias": "./dataSources/accountingDb/types#AliasTypeDbRecord",

          "Person": "./dataSources/accountingDb/types#PersonDbRecord"
        },
        "noSchemaStitching": true,
        "optionalResolveType": true,
        "scalars": {
          "Date": "Date",
          "Rational": "fraction.js#default as Fraction"
        },
        "useImplementingTypes": true
      }
    },
    "./public/fragmentTypes.json": {
      "plugins": ["fragment-matcher"]
    }
  }
}
