{
  "schema": "./schema/**/*.gql",
  "overwrite": true,
  "generates":{
    "./src/graphTypes.ts":{
      "plugins":["typescript", "typescript-resolvers"],
      "config":{
        "noSchemaStitching":true,
        "contextType": "./types#Context"
      }
    },
    "./public/fragmentTypes.json":{
      "plugins":["fragment-matcher"]
    }
  }
}