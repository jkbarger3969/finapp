{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "Graphql server",
  "main": "build/index.js",
  "nodemonConfig": {
    "watch": [
      "src/*",
      "schema/*"
    ],
    "ext": "ts, gql, graphql",
    "ignore": [
      "node_modules/*"
    ],
    "exec": "npm run start:dev"
  },
  "scripts": {
    "build": "npm run build:gql-gen && npm run build:ts",
    "build:ts": "tsc",
    "build:gql-gen": "graphql-codegen",
    "start:dev": "npm run build:gql-gen && env NODE_ENV=development ts-node src/index.ts",
    "start:dev-watch": "nodemon"
  },
  "author": "Michael Price <mikepricedev@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/merge": "^8.0.3",
    "@graphql-tools/schema": "^8.1.2",
    "@graphql-tools/utils": "^8.1.2",
    "@intacct/intacct-sdk": "^1.3.0",
    "@reduxjs/toolkit": "^1.6.1",
    "apollo-datasource": "^3.1.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-koa": "^3.3.0",
    "async-exit-hook": "^2.0.1",
    "change-case": "^4.1.2",
    "date-fns": "^2.23.0",
    "fraction.js": "^4.1.1",
    "graphql": "^15.5.1",
    "koa": "^2.13.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongodb": "^3.6.11",
    "nodemon": "^2.0.12"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/fragment-matcher": "^3.1.0",
    "@graphql-codegen/typescript": "^2.1.2",
    "@graphql-codegen/typescript-resolvers": "^2.1.2",
    "@types/express": "^4.17.13",
    "@types/humanparser": "^1.1.2",
    "@types/lodash": "^4.14.172",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^14.17.12",
    "dotenv": "^8.6.0",
    "ts-essentials": "^8.1.0",
    "ts-node": "^9.1.1",
    "ts-toolbelt": "^8.4.0",
    "typescript": "^4.3.5"
  }
}
