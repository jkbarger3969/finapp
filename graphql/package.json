{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "Graphql server",
  "main": "build/index.js",
  "nodemonConfig": {
    "watch": [
      "src/*",
      "schema/*"
    ],
    "ext": "ts, gql, graphql",
    "ignore": [
      "node_modules/*"
    ],
    "exec": "npm run start:dev"
  },
  "scripts": {
    "build": "npm run build:gql-gen && npm run build:ts",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:gql-gen": "graphql-codegen",
    "start:dev": "npm run build:gql-gen && env NODE_ENV=development ts-node src/index.ts",
    "start:dev-watch": "nodemon"
  },
  "author": "Michael Price <mikepricedev@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@graphql-tools/load-files": "^6.4.0",
    "@graphql-tools/merge": "^8.1.1",
    "@graphql-tools/schema": "^8.2.0",
    "@graphql-tools/utils": "^8.2.2",
    "apollo-datasource": "^3.1.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-koa": "^3.3.0",
    "async-exit-hook": "^2.0.1",
    "change-case": "^4.1.2",
    "date-fns": "^2.23.0",
    "fraction.js": "^4.1.1",
    "graphql": "^16.2.0",
    "koa": "^2.13.1",
    "mongodb": "^4.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/fragment-matcher": "^3.1.0",
    "@graphql-codegen/typescript": "^2.2.0",
    "@graphql-codegen/typescript-resolvers": "^2.2.0",
    "@types/node": "^17.0.7",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.12",
    "ts-essentials": "^9.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.2"
  }
}
