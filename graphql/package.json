{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "Graphql server",
  "main": "build/index.js",
  "nodemonConfig": {
    "watch": [
      "src/*",
      "schema/*"
    ],
    "ext": "ts, gql, graphql",
    "ignore": [
      "node_modules/*"
    ],
    "exec": "npm run start:dev"
  },
  "scripts": {
    "build": "npm run build:gql-gen && npm run build:ts",
    "build:ts": "tsc",
    "build:gql-gen": "graphql-codegen",
    "start:dev": "npm run build:gql-gen && env NODE_ENV=development ts-node src/index.ts",
    "start:dev-watch": "nodemon"
  },
  "author": "Michael Price <mikepricedev@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@graphql-tools/load-files": "^6.2.5",
    "@graphql-tools/merge": "^6.2.5",
    "@intacct/intacct-sdk": "^1.3.0",
    "@reduxjs/toolkit": "^1.4.0",
    "apollo-server": "^2.19.0",
    "apollo-server-koa": "^2.19.0",
    "async-exit-hook": "^2.0.1",
    "date-fns": "^2.16.1",
    "fraction.js": "^4.0.12",
    "graphql": "^15.4.0",
    "koa": "^2.13.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongodb": "^3.6.3",
    "nodemon": "^2.0.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.19.2",
    "@graphql-codegen/fragment-matcher": "^2.0.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-resolvers": "^1.17.11",
    "@types/express": "^4.17.9",
    "@types/humanparser": "^1.1.1",
    "@types/lodash": "^4.14.165",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^14.14.9",
    "dotenv": "^8.2.0",
    "ts-node": "^9.0.0",
    "ts-toolbelt": "^8.0.7",
    "typescript": "^4.1.2"
  }
}
