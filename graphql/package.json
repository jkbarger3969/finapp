{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "Graphql server",
  "main": "build/index.js",
  "nodemonConfig": {
    "watch": [
      "src/*",
      "schema/*"
    ],
    "ext": "ts, gql, graphql",
    "ignore": [
      "node_modules/*"
    ],
    "exec": "npm run start:dev"
  },
  "scripts": {
    "build": "npm run build:gql-gen && npm run build:ts",
    "build:ts": "tsc",
    "build:gql-gen": "graphql-codegen",
    "start:dev": "npm run build:gql-gen && env NODE_ENV=development ts-node src/index.ts",
    "start:dev-watch": "nodemon"
  },
  "author": "Michael Price <mikepricedev@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/merge": "^6.2.13",
    "@intacct/intacct-sdk": "^1.3.0",
    "@reduxjs/toolkit": "^1.5.1",
    "apollo-server": "^2.24.0",
    "apollo-server-koa": "^2.24.0",
    "async-exit-hook": "^2.0.1",
    "change-case": "^4.1.2",
    "date-fns": "^2.21.2",
    "fraction.js": "^4.0.13",
    "graphql": "^15.5.0",
    "koa": "^2.13.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongodb": "^3.6.6",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/fragment-matcher": "^2.0.1",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@types/express": "^4.17.11",
    "@types/humanparser": "^1.1.1",
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.44",
    "dotenv": "^8.6.0",
    "ts-node": "^9.1.1",
    "ts-toolbelt": "^8.4.0",
    "typescript": "^4.2.4"
  }
}
