{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "Graphql server",
  "main": "build/index.js",
  "nodemonConfig": {
    "watch": [
      "src/*",
      "schema/*"
    ],
    "ext": "ts, gql, graphql",
    "ignore": [
      "node_modules/*"
    ],
    "exec": "npm run start:dev"
  },
  "scripts": {
    "build": "npm run build:gql-gen && npm run build:ts",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:gql-gen": "graphql-codegen",
    "start": "npx kill-port 4000 && node build/index.js",
    "start:dev": "npx kill-port 4000 && npm run build:gql-gen && env NODE_ENV=development node -r ts-node/register/transpile-only src/index.ts",
    "start:dev-watch": "nodemon"
  },
  "author": "Michael Price <mikepricedev@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@graphql-tools/load-files": "^6.4.0",
    "@graphql-tools/merge": "^8.1.1",
    "@graphql-tools/schema": "^8.2.0",
    "@graphql-tools/utils": "^8.2.2",
    "apollo-datasource": "3.3.0",
    "apollo-server-core": "3.13.0",
    "apollo-server-koa": "3.13.0",
    "async-exit-hook": "^2.0.1",
    "change-case": "^4.1.2",
    "dataloader": "^2.2.3",
    "date-fns": "^2.23.0",
    "fraction.js": "^4.1.1",
    "google-auth-library": "^10.5.0",
    "graphql": "^16.2.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload-minimal": "^1.6.4",
    "jsonwebtoken": "^9.0.3",
    "koa": "^2.13.1",
    "koa-mount": "^4.2.0",
    "koa-static": "^5.0.0",
    "mongodb": "^4.2.2",
    "nodemailer": "^8.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/fragment-matcher": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-resolvers": "^5.1.5",
    "@types/graphql-upload": "^16.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^17.0.7",
    "@types/nodemailer": "^7.0.9",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.12",
    "ts-essentials": "^9.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.2"
  }
}
